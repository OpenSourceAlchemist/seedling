begin; require 'rubygems'; rescue LoadError; end

require 'rake'
require 'rake/clean'
require 'rake/gempackagetask'
require 'time'
require 'date'
require "lib/name_parse"

PROJECT_SPECS = FileList[
  'spec/**/*.rb'
]

PROJECT_MODULE = '<%= lib_name -%>'
PROJECT_README = 'README'
#PROJECT_RUBYFORGE_GROUP_ID = 3034
PROJECT_COPYRIGHT = [
"#          Copyright (c) #{Time.now.year} <%= @authors[:primary_name] -%> <%= @authors[:primary_email] -%>",
  "# Distributed under the terms of the MIT license."
]

# To release the monthly version do:
# $ PROJECT_VERSION=2009.03 rake release
IGNORE_FILES = [/\.gitignore/]

GEMSPEC = Gem::Specification.new{|s|
  s.name         = '<%= lib_name_u -%>'
  s.author       = "<%= @authors[:primary_name] -%>"
  s.summary      = "<%= @project[:summary] -%>"
  s.description  = "<%= @project[:description] || @project[:summary] -%>"
  s.email        = '<%= @authors[:primary_email] -%>'
  s.homepage     = '<%= @project[:url] -%>'
  s.platform     = Gem::Platform::RUBY
  s.version      = (ENV['PROJECT_VERSION'] || (begin;Object.const_get(PROJECT_MODULE)::VERSION;rescue;Date.today.strftime("%Y.%m.%d");end))
  s.files        = `git ls-files`.split("\n").sort.reject { |f| IGNORE_FILES.detect { |exp| f.match(exp)  } }
  s.has_rdoc     = true
  s.require_path = 'lib'
  s.bindir = "bin"
  s.executables = ["name_parse"]
  s.rubyforge_project = "<%= @project[:rubyforge_project] -%>"

  s.post_install_message = <<MESSAGE.strip
============================================================

Thank you for installing <%= lib_name -%>!

============================================================
MESSAGE
}

Dir['tasks/*.rake'].each{|f| import(f) }

task :default => [:bacon]

CLEAN.include %w[
  **/.*.sw?
  *.gem
  .config
  **/*~
  **/{data.db,cache.yaml}
  *.yaml
  pkg
  rdoc
  ydoc
  *coverage*
]
